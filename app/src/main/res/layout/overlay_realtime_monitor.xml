<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="120dp"
    android:background="@drawable/bg_monitor_overlay"
    android:padding="6dp">

    <!-- 左上角编号 -->
    <TextView
        android:id="@+id/monitorIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:textColor="#33FFFFFF"
        android:textSize="@dimen/floating_text_small"
        tools:text="#1" />

    <!-- 关闭按钮 -->
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnClose"
        android:layout_width="@dimen/floating_icon_ssm"
        android:layout_height="@dimen/floating_icon_ssm"
        android:layout_gravity="end|top"
        android:background="@android:color/transparent"
        android:contentDescription="@string/close"
        android:src="@drawable/icon_close_24px"
        android:scaleType="fitCenter"
        app:tint="#55FFFFFF" />

    <!-- 地址列表容器 -->
    <LinearLayout
        android:id="@+id/addressListContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:orientation="vertical" />

</FrameLayout>
