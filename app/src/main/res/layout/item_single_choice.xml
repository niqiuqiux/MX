<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_settings_item_ripple"
    android:gravity="center_vertical"
    android:minHeight="@dimen/floating_touch_target"
    android:orientation="horizontal"
    android:padding="@dimen/floating_spacing_xs">

    <RadioButton
        android:id="@android:id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#1976D2"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="@dimen/floating_height_button_sm"
        android:layout_height="@dimen/floating_height_button_sm"
        android:clickable="false"
        android:focusable="false"
        android:importantForAccessibility="no"
        android:padding="@dimen/floating_spacing_md"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/floating_text_h3" />

</LinearLayout>
