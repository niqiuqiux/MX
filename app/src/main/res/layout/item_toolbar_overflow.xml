<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:minHeight="@dimen/floating_touch_target"
    android:orientation="horizontal"
    android:paddingStart="@dimen/floating_spacing_lg"
    android:paddingTop="@dimen/floating_spacing_md"
    android:paddingEnd="@dimen/floating_spacing_lg"
    android:paddingBottom="@dimen/floating_spacing_md">

    <ImageView
        android:id="@+id/overflow_item_icon"
        android:layout_width="@dimen/floating_icon_md"
        android:layout_height="@dimen/floating_icon_md"
        android:scaleType="centerInside"
        android:tint="#FFFFFF" />

    <TextView
        android:id="@+id/oveflow_item_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:text="@string/content_desc_menu"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/floating_text_h3" />

</LinearLayout>
