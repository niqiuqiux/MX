<?xml version="1.0" encoding="utf-8"?>
<moe.fuqiuluo.mamu.widget.FixedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="@dimen/floating_spacing_lg"
    app:maxHeightPercent="0.9"
    app:maxWidthPercent="0.95">

    <!-- 上层：左右分栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- 左侧：基础信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minWidth="200dp"
            android:orientation="vertical"
            android:paddingEnd="@dimen/floating_spacing_md">

            <!-- 标题 -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="偏移量计算"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/floating_text_h2"
                android:textStyle="bold" />

            <!-- 基址信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基址: "
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/floating_text_body"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_base_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:textColor="#64B5F6"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/floating_text_body" />

            </LinearLayout>

            <!-- 异或结果 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="偏移XOR: "
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/floating_text_body"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_xor_result"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:textColor="#FF9800"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/floating_text_body" />

            </LinearLayout>

            <!-- 统计信息 -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#AAAAAA"
                android:textSize="@dimen/floating_text_caption" />

        </LinearLayout>

        <!-- 分隔线 -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            app:dividerColor="#33FFFFFF" />

        <!-- 右侧：偏移量列表 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <!-- 表头 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="范围"
                    android:textColor="#AAAAAA"
                    android:textSize="@dimen/floating_text_caption"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="地址"
                    android:textColor="#AAAAAA"
                    android:textSize="@dimen/floating_text_caption"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="偏移量"
                    android:textColor="#AAAAAA"
                    android:textSize="@dimen/floating_text_caption"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="增量"
                    android:textColor="#AAAAAA"
                    android:textSize="@dimen/floating_text_caption"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 分隔线 -->
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                app:dividerColor="#33FFFFFF" />

            <!-- 偏移量列表 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/offset_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:scrollbars="vertical" />

        </LinearLayout>

    </LinearLayout>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_copy"
            style="@style/FloatingButton.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            style="@style/FloatingButton.Text.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭" />

    </LinearLayout>

</moe.fuqiuluo.mamu.widget.FixedLinearLayout>
