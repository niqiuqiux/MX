<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material Switch -->
    <style name="FloatingSwitch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/selector_switch_thumb</item>
        <item name="trackTint">@color/selector_switch_track</item>
        <item name="android:minWidth">@dimen/floating_touch_target</item>
        <item name="android:minHeight">@dimen/floating_touch_target</item>
    </style>

    <!-- Material CheckBox -->
    <style name="FloatingCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/selector_checkbox</item>
        <item name="android:minWidth">@dimen/floating_touch_target</item>
        <item name="android:minHeight">@dimen/floating_touch_target</item>
        <item name="android:textColor">@color/floating_text_primary</item>
        <item name="android:textSize">@dimen/floating_text_body</item>
    </style>

    <!-- Material Slider (替代SeekBar) -->
    <style name="FloatingSlider" parent="Widget.Material3.Slider">
        <item name="thumbColor">@color/floating_primary_light</item>
        <item name="trackColorActive">@color/floating_primary_light</item>
        <item name="trackColorInactive">@color/floating_border</item>
        <item name="thumbRadius">10dp</item>
        <item name="thumbElevation">@dimen/floating_elevation_card</item>
        <item name="trackHeight">4dp</item>
    </style>

    <!-- TextInputLayout (Material样式) -->
    <style name="FloatingTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/floating_primary</item>
        <item name="boxStrokeWidth">@dimen/floating_stroke_normal</item>
        <item name="android:textColorHint">@color/floating_text_tertiary</item>
        <item name="hintTextColor">@color/floating_primary</item>
    </style>

    <style name="FloatingTextInput.Dense" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/floating_primary</item>
        <item name="boxStrokeWidth">@dimen/floating_stroke_normal</item>
        <item name="android:textColorHint">@color/floating_text_tertiary</item>
        <item name="hintTextColor">@color/floating_primary</item>
    </style>
</resources>
