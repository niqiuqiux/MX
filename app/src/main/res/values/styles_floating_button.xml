<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material Button 基础样式 -->
    <style name="FloatingButton" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/floating_height_button</item>
        <item name="android:paddingStart">@dimen/floating_spacing_lg</item>
        <item name="android:paddingEnd">@dimen/floating_spacing_lg</item>
        <item name="android:textSize">@dimen/floating_text_body</item>
        <item name="android:textColor">@color/floating_text_primary</item>
        <item name="cornerRadius">@dimen/floating_radius_md</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="rippleColor">@color/floating_ripple</item>
    </style>

    <!-- 主要按钮（填充） -->
    <style name="FloatingButton.Primary">
        <item name="backgroundTint">@color/floating_primary</item>
        <item name="android:elevation">@dimen/floating_elevation_card</item>
    </style>

    <!-- 主要按钮 - 危险操作（红色） -->
    <style name="FloatingButton.Primary.Danger">
        <item name="backgroundTint">@color/floating_error</item>
    </style>

    <!-- 主要按钮 - 警告操作（橙色） -->
    <style name="FloatingButton.Primary.Warning">
        <item name="backgroundTint">@color/floating_warning</item>
    </style>

    <!-- 主要按钮 - 成功操作（绿色） -->
    <style name="FloatingButton.Primary.Success">
        <item name="backgroundTint">@color/floating_success</item>
    </style>

    <!-- 次要按钮（轮廓） -->
    <style name="FloatingButton.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/floating_height_button</item>
        <item name="android:paddingStart">@dimen/floating_spacing_lg</item>
        <item name="android:paddingEnd">@dimen/floating_spacing_lg</item>
        <item name="android:textSize">@dimen/floating_text_body</item>
        <item name="android:textColor">@color/floating_text_primary</item>
        <item name="cornerRadius">@dimen/floating_radius_md</item>
        <item name="strokeColor">@color/floating_border</item>
        <item name="strokeWidth">@dimen/floating_stroke_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/floating_ripple</item>
    </style>

    <!-- 文字按钮（无背景） -->
    <style name="FloatingButton.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:minHeight">@dimen/floating_height_button_sm</item>
        <item name="android:paddingStart">@dimen/floating_spacing_lg</item>
        <item name="android:paddingEnd">@dimen/floating_spacing_lg</item>
        <item name="android:textSize">@dimen/floating_text_body</item>
        <item name="android:textColor">@color/floating_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/floating_ripple</item>
    </style>

    <style name="FloatingButton.Text.White">
        <item name="android:textColor">@color/floating_text_primary</item>
    </style>

    <style name="FloatingButton.Text.Warning">
        <item name="android:textColor">@color/floating_warning</item>
    </style>

    <!-- 图标按钮 -->
    <style name="FloatingButton.Icon">
        <item name="android:layout_width">@dimen/floating_touch_target</item>
        <item name="android:layout_height">@dimen/floating_touch_target</item>
        <item name="android:padding">@dimen/floating_spacing_sm</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/floating_text_primary</item>
    </style>

    <style name="FloatingButton.Icon.Small">
        <item name="android:layout_width">@dimen/floating_icon_lg</item>
        <item name="android:layout_height">@dimen/floating_icon_lg</item>
        <item name="android:padding">@dimen/floating_spacing_xs</item>
    </style>

    <!-- Material图标按钮 - 用于Tab和工具栏图标 -->
    <style name="FloatingButton.MaterialIcon" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">@dimen/floating_spacing_sm</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/floating_text_primary</item>
        <item name="rippleColor">@color/floating_ripple</item>
    </style>

    <!-- Material图标按钮 - Tab专用（48dp固定尺寸 - MD3最小触摸目标） -->
    <style name="FloatingButton.MaterialIcon.Tab">
        <item name="android:layout_width">@dimen/floating_touch_target</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Material图标按钮 - 工具栏关闭按钮 -->
    <style name="FloatingButton.MaterialIcon.Close">
        <item name="android:layout_width">@dimen/floating_icon_xl</item>
        <item name="android:layout_height">@dimen/floating_icon_xl</item>
        <item name="android:padding">@dimen/floating_spacing_xs</item>
    </style>

    <!-- Material图标按钮 - 纯图标按钮（无文字） -->
    <style name="FloatingButton.MaterialIcon.IconOnly">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/floating_touch_target</item>
        <item name="android:minHeight">@dimen/floating_touch_target</item>
        <item name="android:padding">@dimen/floating_spacing_xs</item>
    </style>
</resources>
